<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN" "http://www.sun.com/software/appserver/dtds/sun-resources_1_3.dtd">
<resources>
	<jdbc-resource jndi-name="java:app/jdbc/pooldemo"  pool-name="PoolDemo"/>
	<jdbc-connection-pool datasource-classname="org.postgresql.ds.PGSimpleDataSource" name="PoolDemo" res-type="javax.sql.DataSource" >
		<property name="url" value="jdbc:postgresql://localhost:5432/rest"/>
		<property name="user" value="postgres"/>
		<property name="password" value="admin"/>
	</jdbc-connection-pool>
</resources>